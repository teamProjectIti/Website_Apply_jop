@model IEnumerable<WebApplication1.Models.category>

@{
    ViewData["Title"] = "Index";
}

@if(Model.Count()==0){
<div class=" row my-3 bg-warning mx-5 p-2 rounded">
    <div class="col-3">
            <a asp-action="Create" class="btn btn-light">Create New</a>
    </div>
    <div class="col-9">
            <div class="text-center text-light">... No Item In Basket</div>
    </div>
</div>
}else{
    
<div class=" row my-3 bg-warning mx-5 p-2 rounded">
    <div class="col-3">
            <a asp-action="Create" class="btn btn-light">Create New</a>
    </div>
    <div class="col-9">
        <h4 class="text-center text-light">All Data ...</h4>
    </div>
</div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name_Cat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Describations)
            </th>
            <th class="text-center">Setting</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_Cat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Describations)
            </td>
            <td>
               <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.ID">Edit
                    <i class="fa fa-edit"></i>
                </a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ID">Details
                    <i class="fa fa-info"></i>
                </a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID">Delete
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
